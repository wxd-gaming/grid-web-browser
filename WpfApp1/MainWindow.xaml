<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="分屏游戏浏览器" Height="850" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Height="30">
            <MenuItem Header="File" Height="30" />
            <MenuItem Header="1格" Height="30" Click="MenuItem_Click_1" ToolTip="采用一个浏览器" />
            <MenuItem Header="2格" Height="30"  Click="MenuItem_Click_2" ToolTip="采用左右分屏方式"/>
            <MenuItem Header="4格" Height="30" Click="MenuItem_Click_4" ToolTip="采用上下左右四格分屏"/>
        </Menu>
        <UniformGrid x:Name="gmain" Grid.Row="1">
        </UniformGrid>
    </Grid>
</Window>
